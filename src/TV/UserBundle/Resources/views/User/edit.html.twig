{# src/TV/User/Resources/views/User/edit.html.twig #}

{% extends "TVFindyourbandBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Modifier profil
{% endblock %}

{% block findyourband_body %}
    <div class="wrapper">
        <div class="container">
            <h2>Modifier Profil</h2>

            {{ form_start(form, {'attr': {'class': 'form'}}) }}

                {{ form_errors(form) }}
                
                 <div>
                    {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-1-2 last">
                    {{ form_label(form.genre, "Genre", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-1-2">
                    {{ form_label(form.instrument, "Instrument", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_widget(form.instrument, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-1-2 last">
                    {{ form_label(form.level, "Niveau", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_widget(form.level, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-1-2 ">
                    {{ form_label(form.province, "Province", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_widget(form.province, {'attr': {'class': 'form-control'}}) }}
                </div>
         
                <div class="form-1-2 ">
                    {{ form_label(form.video, "Url Vid√©o Youtube", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_widget(form.video, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="error">
                    {{ form_errors(form.content) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.content, "Description:", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                {{ form_label(form.image, "Photo de profil", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                
                {{ form_widget(form.save, { 'label': 'Modifier profil' }) }}

            {{ form_end(form) }}
        
        </div>
    </div>
{% endblock %}
